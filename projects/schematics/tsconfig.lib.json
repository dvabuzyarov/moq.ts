{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/schematics",
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "enableIvy": false
  },
  "exclude": [
    "**/index.specs.ts",
    "**/*.spec.ts"
  ]
}
