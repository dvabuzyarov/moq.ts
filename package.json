{
  "name": "",
  "version": "0.0.0-semantically-released",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvabuzyarov/moq.ts"
  },
  "scripts": {
    "start": "ng serve",
    "build": "ng build moq --prod && cpx README.md ./dist/moq/",
    "build-docs": "tsc -p ./projects/docs/tsconfig.lib.json",
    "build-tests": "tsc -p ./projects/moq/tsconfig.spec.json ",
    "test": "npm run build-tests && node ./out-tsc/**/index.specs.js",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "commit": "git-cz",
    "commit-retry": "git cz --retry",
    "typedoc": "node ./dist/docs/public_api.js",
    "serve:docs": "rimraf docs/* && npm run build-docs && npm run typedoc && serve"
  },
  "private": true,
  "devDependencies": {
    "@angular-devkit/build-angular": "0.1001.5",
    "@angular-devkit/build-ng-packagr": "0.1001.5",
    "@angular/cli": "10.1.5",
    "@angular/compiler": "10.1.5",
    "@angular/compiler-cli": "10.1.5",
    "@angular/core": "10.1.5",
    "@angular/language-service": "10.1.5",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@qiwi/semantic-release-gh-pages-plugin": "1.16.0",
    "@semantic-release/changelog": "5.0.1",
    "@types/jasmine": "3.5.14",
    "@types/node": "12.12.64",
    "codelyzer": "5.2.2",
    "cpx": "1.5.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.0",
    "jasmine": "3.6.1",
    "jasmine-core": "3.6.0",
    "ng-packagr": "10.1.2",
    "rxjs": "6.6.3",
    "semantic-release": "17.1.2",
    "serve": "11.3.2",
    "ts-node": "8.10.2",
    "tslint": "6.1.3",
    "typedoc": "0.18.0",
    "typescript": "3.9.7",
    "zone.js": "0.11.1",
    "tslib": "2.0.2"
  },
  "release": {
    "branches": [
      {
        "name": "master"
      },
      {
        "name": "dev",
        "channel": "next"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist/moq"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            "CHANGELOG.md"
          ]
        }
      ],
      "@qiwi/semantic-release-gh-pages-plugin"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test",
      "commit-msg": "commitlint --edit"
    }
  }
}
